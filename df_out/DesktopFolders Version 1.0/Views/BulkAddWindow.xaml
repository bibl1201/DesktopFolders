<Window x:Class="DesktopFolders.Views.BulkAddWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Bulk Add Apps"
        Icon="pack://application:,,,/Resources/folder.ico"
        Width="660" Height="720"
        MinWidth="460" MinHeight="440"
        WindowStartupLocation="CenterOwner"
        ResizeMode="CanResizeWithGrip"
        Background="#1A1A2E"
        Foreground="White"
        FontFamily="Segoe UI">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>  <!-- heading          -->
            <RowDefinition Height="Auto"/>  <!-- search row       -->
            <RowDefinition Height="Auto"/>  <!-- filter toggles   -->
            <RowDefinition Height="Auto"/>  <!-- status bar       -->
            <RowDefinition Height="*"/>     <!-- results          -->
            <RowDefinition Height="Auto"/>  <!-- footer buttons   -->
        </Grid.RowDefinitions>

        <!-- â”€â”€ Heading â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <TextBlock Grid.Row="0"
                   Text="BULK ADD APPLICATIONS"
                   FontSize="11" FontWeight="SemiBold"
                   Foreground="#80B0B0C0" Margin="0,0,0,14"/>

        <!-- â”€â”€ Search row: text box + Search button â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Grid Grid.Row="1" Margin="0,0,0,8">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <Border Grid.Column="0" Background="#252535" CornerRadius="8"
                    BorderBrush="#40FFFFFF" BorderThickness="1">
                <Grid>
                    <!-- Placeholder hint shown when empty -->
                    <TextBlock x:Name="SearchHint"
                               Text="Type a name, then press Search or Enterâ€¦"
                               Foreground="#45FFFFFF" FontSize="13"
                               Padding="12,9,0,0"
                               IsHitTestVisible="False"
                               Panel.ZIndex="1"/>
                    <TextBox x:Name="SearchBox"
                             Background="Transparent" Foreground="White"
                             BorderThickness="0" FontSize="13" Padding="10,8"
                             CaretBrush="White"
                             Text=""
                             TextChanged="SearchBox_TextChanged"
                             KeyDown="SearchBox_KeyDown"
                             Panel.ZIndex="2"/>
                </Grid>
            </Border>

            <Button Grid.Column="2" x:Name="SearchBtn"
                    Content="Search" Padding="20,9" FontSize="12"
                    Click="SearchBtn_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="#5B8CFF" CornerRadius="8"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="MouseOver">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.82" Duration="0:0:0.1"/>
                                        </Storyboard>
                                    </VisualState>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.4" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </Grid>

        <!-- â”€â”€ Filter toggles â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <StackPanel Grid.Row="2" Orientation="Horizontal"
                    Margin="0,0,0,10" VerticalAlignment="Center">
            <CheckBox x:Name="UserInstalledToggle"
                      Content="User-installed apps only"
                      Foreground="#C0C0D0" FontSize="11"
                      IsChecked="True"
                      Checked="Filter_Changed" Unchecked="Filter_Changed"
                      VerticalContentAlignment="Center"/>
            <TextBlock Text="  Â·  Filters out system &amp; runtime executables"
                       Foreground="#50B0B0C0" FontSize="10"
                       VerticalAlignment="Center"/>
        </StackPanel>

        <!-- â”€â”€ Status / loading bar â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <StackPanel Grid.Row="3" Margin="0,0,0,8">
            <ProgressBar x:Name="LoadingBar" IsIndeterminate="True" Height="3"
                         Visibility="Collapsed"
                         Foreground="#5B8CFF" Background="Transparent"
                         BorderThickness="0" Margin="0,0,0,6"/>
            <TextBlock x:Name="StatusText" FontSize="11" Foreground="#70B0B0C0"
                       Text="Type an app name above, then press Search or Enter."
                       TextWrapping="Wrap"/>
        </StackPanel>

        <!-- â”€â”€ Results list â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Border Grid.Row="4" x:Name="ResultsPanel" Visibility="Collapsed"
                Background="#141422" CornerRadius="8"
                BorderBrush="#22FFFFFF" BorderThickness="1">
            <ScrollViewer VerticalScrollBarVisibility="Auto" Padding="8,4">
                <StackPanel x:Name="GroupsPanel"/>
            </ScrollViewer>
        </Border>

        <!-- Empty-state placeholder (visible before first search) -->
        <Border Grid.Row="4" x:Name="EmptyState" Visibility="Visible"
                Background="#0DFFFFFF" CornerRadius="8"
                BorderBrush="#15FFFFFF" BorderThickness="1">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center"
                        Margin="0,40,0,40">
                <TextBlock Text="ðŸ”" FontSize="36" HorizontalAlignment="Center"
                           Margin="0,0,0,12"/>
                <TextBlock Text="Search for an app to get started."
                           Foreground="#60B0B0C0" FontSize="13"
                           HorizontalAlignment="Center"/>
                <TextBlock Text="Type a name and press Search or Enter."
                           Foreground="#40B0B0C0" FontSize="11"
                           HorizontalAlignment="Center" Margin="0,4,0,0"/>
            </StackPanel>
        </Border>

        <!-- â”€â”€ Footer â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€â”€ -->
        <Grid Grid.Row="5" Margin="0,12,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="8"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>

            <TextBlock Grid.Column="0"
                       Text="Click to select  Â·  Click again to deselect"
                       FontSize="10" Foreground="#48B0B0C0"
                       VerticalAlignment="Center"/>

            <Button Grid.Column="1" x:Name="CancelBtn"
                    Content="Cancel" Padding="18,8" FontSize="12"
                    Click="CancelBtn_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border Background="#28FFFFFF" CornerRadius="7"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>White</Button.Foreground>
            </Button>

            <Button Grid.Column="3" x:Name="AddBtn"
                    Content="Add Selected" IsEnabled="False"
                    Padding="18,8" FontSize="12"
                    Click="AddBtn_Click" Cursor="Hand">
                <Button.Template>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd2" Background="#5B8CFF" CornerRadius="7"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                            <VisualStateManager.VisualStateGroups>
                                <VisualStateGroup x:Name="CommonStates">
                                    <VisualState x:Name="Normal"/>
                                    <VisualState x:Name="Disabled">
                                        <Storyboard>
                                            <DoubleAnimation Storyboard.TargetName="Bd2"
                                                Storyboard.TargetProperty="Opacity"
                                                To="0.35" Duration="0"/>
                                        </Storyboard>
                                    </VisualState>
                                </VisualStateGroup>
                            </VisualStateManager.VisualStateGroups>
                        </Border>
                    </ControlTemplate>
                </Button.Template>
                <Button.Foreground>White</Button.Foreground>
            </Button>
        </Grid>
    </Grid>
</Window>
