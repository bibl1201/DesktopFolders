<Window x:Class="DesktopFolders.Views.ThemeSettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Settings"
        Icon="pack://application:,,,/Resources/folder.ico"
        Width="820" Height="640"
        MinWidth="720" MinHeight="520"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResizeWithGrip"
        WindowStyle="SingleBorderWindow"
        FontFamily="Segoe UI">

    <Window.Resources>

        <!-- Top-level nav button -->
        <Style x:Key="NavBtn" TargetType="Button">
            <Setter Property="Background"                 Value="Transparent"/>
            <Setter Property="Foreground"                 Value="#888"/>
            <Setter Property="BorderThickness"            Value="0"/>
            <Setter Property="Padding"                    Value="14,10"/>
            <Setter Property="FontSize"                   Value="12.5"/>
            <Setter Property="HorizontalContentAlignment" Value="Left"/>
            <Setter Property="Cursor"                     Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}"
                                CornerRadius="8" Padding="{TemplateBinding Padding}" Margin="4,1">
                            <ContentPresenter HorizontalAlignment="Left" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#18FFFFFF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Indented sub-nav button -->
        <Style x:Key="SubNavBtn" TargetType="Button" BasedOn="{StaticResource NavBtn}">
            <Setter Property="FontSize"  Value="12"/>
            <Setter Property="Padding"   Value="10,8"/>
        </Style>

        <!-- Preset card -->
        <Style x:Key="PresetBtn" TargetType="Button">
            <Setter Property="Background"      Value="Transparent"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding"         Value="0"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="Bd"
                                Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Stretch" VerticalAlignment="Stretch"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Opacity" Value="0.85"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style x:Key="SH" TargetType="TextBlock">
            <Setter Property="FontSize"   Value="10"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Margin"     Value="0,20,0,8"/>
            <Setter Property="Opacity"    Value="0.45"/>
        </Style>
        <Style x:Key="SL" TargetType="TextBlock">
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="Margin"   Value="0,0,0,5"/>
        </Style>
        <Style x:Key="RR" TargetType="StackPanel">
            <Setter Property="Orientation" Value="Horizontal"/>
            <Setter Property="Margin"      Value="0,0,0,14"/>
        </Style>
        <Style x:Key="R" TargetType="RadioButton">
            <Setter Property="Margin"                   Value="0,0,18,0"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style x:Key="CB" TargetType="CheckBox">
            <Setter Property="Margin" Value="0,0,0,10"/>
        </Style>
        <Style x:Key="ActionBtn" TargetType="Button">
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding"         Value="22,8"/>
            <Setter Property="FontSize"        Value="12.5"/>
            <Setter Property="Cursor"          Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="7"
                                Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Opacity" Value="0.82"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="200"/>
            <ColumnDefinition Width="1"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â• LEFT NAV â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <DockPanel Grid.Column="0" x:Name="NavPanel">

            <!-- App title -->
            <StackPanel DockPanel.Dock="Top" Margin="20,20,12,16">
                <TextBlock x:Name="AppTitleLabel" Text="Desktop Folders"
                           FontSize="14" FontWeight="SemiBold"/>
                <TextBlock Text="Settings" FontSize="11" Opacity="0.45" Margin="0,2,0,0"/>
            </StackPanel>

            <!-- â”€â”€ APPEARANCE top-level â”€â”€ -->
            <TextBlock DockPanel.Dock="Top" x:Name="NavLabelAppearance"
                       Text="APPEARANCE" FontSize="9" FontWeight="SemiBold"
                       Opacity="0.35" Margin="20,0,0,4"/>

            <!-- Appearance top-level button (collapses/expands sub-items) -->
            <StackPanel DockPanel.Dock="Top" Margin="8,0,8,0">
                <Button x:Name="NavAppearance" Tag="Appearance" Style="{StaticResource NavBtn}"
                        Click="Nav_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸŽ¨" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Appearance" VerticalAlignment="Center"/>
                        <TextBlock x:Name="AppearanceChevron" Text=" â€º" FontSize="12"
                                   VerticalAlignment="Center" Opacity="0.5"/>
                    </StackPanel>
                </Button>

                <!-- Sub-items â€” shown when Appearance is expanded -->
                <StackPanel x:Name="AppearanceSubNav" Visibility="Visible" Margin="16,0,0,0">
                    <Button x:Name="NavTheme"   Tag="Theme"   Style="{StaticResource SubNavBtn}" Click="Nav_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Â·" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.4"/>
                            <TextBlock Text="Look &amp; Feel" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>

                    <Button x:Name="NavPopup"   Tag="Popup"   Style="{StaticResource SubNavBtn}" Click="Nav_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Â·" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.4"/>
                            <TextBlock Text="Popup Window" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                    <Button x:Name="NavWidget"  Tag="Widget"  Style="{StaticResource SubNavBtn}" Click="Nav_Click">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock Text="Â·" FontSize="16" Margin="0,0,8,0" VerticalAlignment="Center" Opacity="0.4"/>
                            <TextBlock Text="Widget" VerticalAlignment="Center"/>
                        </StackPanel>
                    </Button>
                </StackPanel>
            </StackPanel>

            <!-- â”€â”€ FOLDERS section â”€â”€ -->
            <TextBlock DockPanel.Dock="Top" x:Name="NavLabelFolders"
                       Text="FOLDERS" FontSize="9" FontWeight="SemiBold"
                       Opacity="0.35" Margin="20,16,0,4"/>
            <StackPanel DockPanel.Dock="Top" Margin="8,0,8,0">
                <Button x:Name="NavFolder" Tag="Folder" Style="{StaticResource NavBtn}" Click="Nav_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ“" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Folder Settings" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- â”€â”€ BACKUP section â”€â”€ -->
            <TextBlock DockPanel.Dock="Top" x:Name="NavLabelBackup"
                       Text="DATA" FontSize="9" FontWeight="SemiBold"
                       Opacity="0.35" Margin="20,16,0,4"/>
            <StackPanel DockPanel.Dock="Top" Margin="8,0,8,0">
                <Button x:Name="NavBackup" Tag="Backup" Style="{StaticResource NavBtn}" Click="Nav_Click">
                    <StackPanel Orientation="Horizontal">
                        <TextBlock Text="ðŸ’¾" FontSize="14" Margin="0,0,10,0" VerticalAlignment="Center"/>
                        <TextBlock Text="Backup &amp; Restore" VerticalAlignment="Center"/>
                    </StackPanel>
                </Button>
            </StackPanel>

            <!-- â•â• LIVE PREVIEW (pinned bottom) â•â• -->
            <Border DockPanel.Dock="Bottom" x:Name="PreviewStrip"
                    BorderThickness="0,1,0,0" Padding="12,14,12,14" Margin="0,8,0,0">
                <StackPanel>
                    <TextBlock x:Name="PreviewLabel" Text="PREVIEW" FontSize="9"
                               FontWeight="SemiBold" Opacity="0.35" Margin="4,0,0,10"/>

                    <StackPanel HorizontalAlignment="Center" Margin="0,0,0,12">
                        <Border x:Name="PrevWidget" Width="60" Height="60"
                                CornerRadius="14" HorizontalAlignment="Center">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="10" ShadowDepth="2" Opacity="0.45"/>
                            </Border.Effect>
                            <Grid Margin="8">
                                <Grid.RowDefinitions><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                <Border x:Name="PMini0" Grid.Row="0" Grid.Column="0" Background="#44FFFFFF" CornerRadius="3" Margin="2"/>
                                <Border x:Name="PMini1" Grid.Row="0" Grid.Column="1" Background="#44FFFFFF" CornerRadius="3" Margin="2"/>
                                <Border x:Name="PMini2" Grid.Row="1" Grid.Column="0" Background="#44FFFFFF" CornerRadius="3" Margin="2"/>
                                <Border x:Name="PMini3" Grid.Row="1" Grid.Column="1" Background="#44FFFFFF" CornerRadius="3" Margin="2"/>
                            </Grid>
                        </Border>
                        <TextBlock x:Name="PrevWidgetLabel" Text="My Folder" FontSize="10"
                                   TextAlignment="Center" Margin="0,5,0,0">
                            <TextBlock.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="1" Opacity="0.8"/>
                            </TextBlock.Effect>
                        </TextBlock>
                        <TextBlock Text="Widget" FontSize="8" HorizontalAlignment="Center"
                                   Margin="0,2,0,0" Opacity="0.35"/>
                    </StackPanel>

                    <Border x:Name="PrevPopup" CornerRadius="10" Padding="10,8">
                        <StackPanel>
                            <TextBlock x:Name="PrevPopupTitle" Text="My Folder"
                                       FontSize="11" FontWeight="SemiBold" Margin="0,0,0,7"/>
                            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                                <Border x:Name="PrevIcon0" Width="28" Height="28" CornerRadius="6" Margin="0,0,4,0">
                                    <TextBlock Text="ðŸŽ®" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border x:Name="PrevIcon1" Width="28" Height="28" CornerRadius="6" Margin="0,0,4,0">
                                    <TextBlock Text="ðŸŽµ" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                                <Border x:Name="PrevIcon2" Width="28" Height="28" CornerRadius="6">
                                    <TextBlock Text="ðŸ“·" FontSize="13" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                </Border>
                            </StackPanel>
                        </StackPanel>
                    </Border>
                    <TextBlock Text="Popup" FontSize="8" HorizontalAlignment="Center"
                               Margin="0,4,0,0" Opacity="0.35"/>
                </StackPanel>
            </Border>
            <Border DockPanel.Dock="Bottom" Height="1"/>

        </DockPanel>

        <!-- Divider -->
        <Border Grid.Column="1" x:Name="NavDivider"/>

        <!-- â•â•â•â•â•â•â•â•â•â•â•â•â•â• RIGHT CONTENT â•â•â•â•â•â•â•â•â•â•â•â•â•â• -->
        <Grid Grid.Column="2">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- Page title -->
            <Border Grid.Row="0" Padding="28,16,28,12"
                    BorderThickness="0,0,0,1" x:Name="TitleBarBorder">
                <StackPanel Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock x:Name="PageIcon" FontSize="20" Margin="0,0,10,0" VerticalAlignment="Center"/>
                    <StackPanel VerticalAlignment="Center">
                        <TextBlock x:Name="PageTitle"    FontSize="16" FontWeight="SemiBold"/>
                        <TextBlock x:Name="PageSubtitle" FontSize="11" Opacity="0.45" Margin="0,2,0,0"/>
                    </StackPanel>
                </StackPanel>
            </Border>

            <!-- Content panels -->
            <ScrollViewer Grid.Row="1" VerticalScrollBarVisibility="Auto" Padding="28,4,28,12">
              <Grid>

                <!-- THEME & COLORS -->
                <StackPanel x:Name="PanelLookFeel" Visibility="Visible">
                    <TextBlock Style="{StaticResource SH}" Text="COLOR THEME"/>
                    <StackPanel Style="{StaticResource RR}">
                        <RadioButton x:Name="ThemeDark"     Style="{StaticResource R}" Content="Dark"             GroupName="Theme" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeLight"    Style="{StaticResource R}" Content="Light"            GroupName="Theme" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeMidnight" Style="{StaticResource R}" Content="Midnight"         GroupName="Theme" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeSunset"   Style="{StaticResource R}" Content="Sunset"           GroupName="Theme" Checked="Theme_Checked"/>
                        <RadioButton x:Name="ThemeAccent"   Style="{StaticResource R}" Content="ðŸŽ¨ System Accent" GroupName="Theme" Checked="Theme_Checked"/>
                    </StackPanel>
                    <Border x:Name="AccentPreviewRow" Margin="0,0,0,14" Visibility="Collapsed">
                        <StackPanel Orientation="Horizontal">
                            <TextBlock x:Name="AccentInfoLabel" FontSize="11" VerticalAlignment="Center" Margin="0,0,10,0"/>
                            <Border x:Name="AccentSwatch" Width="26" Height="26" CornerRadius="6"/>
                        </StackPanel>
                    </Border>
                    <TextBlock Style="{StaticResource SH}" Text="FONT SIZE"/>
                    <TextBlock x:Name="FontSizeLabel" Style="{StaticResource SL}"/>
                    <Slider x:Name="FontSlider" Minimum="8" Maximum="16"
                            TickFrequency="1" IsSnapToTickEnabled="True"
                            Margin="0,0,0,4" ValueChanged="FontSlider_ValueChanged"/>

                    <!-- â”€â”€â”€ STYLE PRESETS (merged into Look & Feel) â”€â”€â”€ -->
                    <TextBlock Style="{StaticResource SH}" Text="BUILT-IN STYLE PRESETS"/>
                    <TextBlock Style="{StaticResource SL}" TextWrapping="Wrap" Margin="0,0,0,16"
                               Text="Click any preset to apply its full style and color theme instantly."/>

                    <!-- iOS row -->
                    <TextBlock Style="{StaticResource SH}" Text="iOS"/>
                    <UniformGrid Columns="2" Margin="0,0,0,4">

                        <!-- iOS Light -->
                        <Button x:Name="PresetiOSLight" Style="{StaticResource PresetBtn}"
                                Margin="0,0,6,10" Click="Preset_Click" Tag="iOS_Light">
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="80"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="10,0,0,10" Padding="12,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFE8EEF8" Offset="0"/>
                                            <GradientStop Color="#FFD0DCEE" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border Width="48" Height="48" CornerRadius="11" HorizontalAlignment="Center">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#AACCDDFF" Offset="0"/>
                                                <GradientStop Color="#88AABBDD" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Background="#CCFF5B5B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="0" Grid.Column="1" Background="#CC5BFF8A" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="0" Grid.Column="2" Background="#CC5B9EFF" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="0" Background="#CCFFCA5B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="1" Background="#CCFF5BCA" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="2" Background="#CC5BFFEE" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="0" Background="#CCBB5BFF" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="1" Background="#CCFF8A5B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="2" Background="#CC5BC8FF" CornerRadius="2" Margin="1"/>
                                        </Grid>
                                    </Border>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,10">
                                    <TextBlock x:Name="PresetiOSLightTitle" Text="iOS  â˜€ï¸"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Opacity="0.55"
                                               Text="Frosted glass Â· Light theme Â· Fade Â· 3 col"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- iOS Dark -->
                        <Button x:Name="PresetiOSDark" Style="{StaticResource PresetBtn}"
                                Margin="0,0,0,10" Click="Preset_Click" Tag="iOS_Dark">
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="80"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="10,0,0,10" Padding="12,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF1C1C2E" Offset="0"/>
                                            <GradientStop Color="#FF16162A" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border Width="48" Height="48" CornerRadius="11" HorizontalAlignment="Center">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#883344AA" Offset="0"/>
                                                <GradientStop Color="#66223388" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="5">
                                            <Grid.RowDefinitions><RowDefinition/><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Background="#CCFF6B6B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="0" Grid.Column="1" Background="#CC6BFFAA" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="0" Grid.Column="2" Background="#CC6BAAFF" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="0" Background="#CCFFD06B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="1" Background="#CCFF6BD0" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="1" Grid.Column="2" Background="#CC6BFFEE" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="0" Background="#CCCC6BFF" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="1" Background="#CCFFAA6B" CornerRadius="2" Margin="1"/>
                                            <Border Grid.Row="2" Grid.Column="2" Background="#CC6BCCFF" CornerRadius="2" Margin="1"/>
                                        </Grid>
                                    </Border>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,10">
                                    <TextBlock x:Name="PresetiOSDarkTitle" Text="iOS  ðŸŒ™"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Opacity="0.55"
                                               Text="Frosted glass Â· Dark theme Â· Fade Â· 3 col"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </UniformGrid>

                    <!-- Android row -->
                    <TextBlock Style="{StaticResource SH}" Text="ANDROID"/>
                    <UniformGrid Columns="2" Margin="0,0,0,4">

                        <!-- Android Light -->
                        <Button x:Name="PresetAndroidLight" Style="{StaticResource PresetBtn}"
                                Margin="0,0,6,10" Click="Preset_Click" Tag="Android_Light">
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="80"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="10,0,0,10" Padding="12,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FFEEF2F8" Offset="0"/>
                                            <GradientStop Color="#FFE0E8F4" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border Width="48" Height="48" CornerRadius="24" HorizontalAlignment="Center">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FFD8E4F4" Offset="0"/>
                                                <GradientStop Color="#FFC8D4E8" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="9">
                                            <Grid.RowDefinitions><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Background="#CC1E88E5" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="0" Grid.Column="1" Background="#CC43A047" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="1" Grid.Column="0" Background="#CCFB8C00" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="1" Grid.Column="1" Background="#CCE53935" CornerRadius="3" Margin="2"/>
                                        </Grid>
                                    </Border>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,10">
                                    <TextBlock x:Name="PresetAndroidLightTitle" Text="Android  â˜€ï¸"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Opacity="0.55"
                                               Text="Circle widget Â· Light theme Â· Expand Â· 4 col"/>
                                </StackPanel>
                            </Grid>
                        </Button>

                        <!-- Android Dark -->
                        <Button x:Name="PresetAndroidDark" Style="{StaticResource PresetBtn}"
                                Margin="0,0,0,10" Click="Preset_Click" Tag="Android_Dark">
                            <Grid>
                                <Grid.ColumnDefinitions><ColumnDefinition Width="80"/><ColumnDefinition Width="*"/></Grid.ColumnDefinitions>
                                <Border Grid.Column="0" CornerRadius="10,0,0,10" Padding="12,12">
                                    <Border.Background>
                                        <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                            <GradientStop Color="#FF1A1A2E" Offset="0"/>
                                            <GradientStop Color="#FF16213E" Offset="1"/>
                                        </LinearGradientBrush>
                                    </Border.Background>
                                    <Border Width="48" Height="48" CornerRadius="24" HorizontalAlignment="Center">
                                        <Border.Background>
                                            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                                                <GradientStop Color="#FF1F1F3A" Offset="0"/>
                                                <GradientStop Color="#FF2D2D50" Offset="1"/>
                                            </LinearGradientBrush>
                                        </Border.Background>
                                        <Grid Margin="9">
                                            <Grid.RowDefinitions><RowDefinition/><RowDefinition/></Grid.RowDefinitions>
                                            <Grid.ColumnDefinitions><ColumnDefinition/><ColumnDefinition/></Grid.ColumnDefinitions>
                                            <Border Grid.Row="0" Grid.Column="0" Background="#CC4FC3F7" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="0" Grid.Column="1" Background="#CCA5D6A7" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="1" Grid.Column="0" Background="#CCFFB74D" CornerRadius="3" Margin="2"/>
                                            <Border Grid.Row="1" Grid.Column="1" Background="#CCEF9A9A" CornerRadius="3" Margin="2"/>
                                        </Grid>
                                    </Border>
                                </Border>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center" Margin="10,10">
                                    <TextBlock x:Name="PresetAndroidDarkTitle" Text="Android  ðŸŒ™"
                                               FontSize="13" FontWeight="SemiBold" Margin="0,0,0,3"/>
                                    <TextBlock TextWrapping="Wrap" FontSize="10" Opacity="0.55"
                                               Text="Circle widget Â· Midnight theme Â· Expand Â· 4 col"/>
                                </StackPanel>
                            </Grid>
                        </Button>
                    </UniformGrid>

                    <!-- Windows row -->
                    <TextBlock Style="{StaticResource SH}" Text="WINDOWS"/>
                    <UniformGrid Columns="2" Margin="0,0,0,4">

                        <!-- Windows Light -->
