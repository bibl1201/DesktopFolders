<Window x:Class="DesktopFolders.Views.FolderEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Edit Folder"
        Icon="pack://application:,,,/Resources/folder.ico"
        Width="520" Height="720"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize"
        Background="#1E1E2E"
        Foreground="White"
        FontFamily="Segoe UI">

    <Window.Resources>
        <Style x:Key="ModernTextBox" TargetType="TextBox">
            <Setter Property="Background" Value="#2A2A3E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderBrush" Value="#44475A"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="8,6"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="CaretBrush" Value="White"/>
        </Style>
        <Style x:Key="ModernButton" TargetType="Button">
            <Setter Property="Background" Value="#5B8CFF"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="14,7"/>
            <Setter Property="FontSize" Value="13"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                CornerRadius="7" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#7AABFF"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter Property="Background" Value="#3A6CDF"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid Margin="22">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Title -->
        <TextBlock Grid.Row="0" Text="Edit Folder" FontSize="20" FontWeight="Bold"
                   Foreground="White" Margin="0,0,0,18"/>

        <!-- Folder name -->
        <StackPanel Grid.Row="1" Margin="0,0,0,16">
            <TextBlock Text="Folder Name" FontSize="12" Foreground="#888" Margin="0,0,0,5"/>
            <TextBox x:Name="NameBox" Style="{StaticResource ModernTextBox}"/>
        </StackPanel>

        <!-- Color Picker -->
        <StackPanel Grid.Row="2" Margin="0,0,0,14">
            <TextBlock Text="Color" FontSize="12" Foreground="#888" Margin="0,0,0,10"/>

            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="14"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <!-- Color wheel canvas -->
                <Canvas x:Name="WheelCanvas" Grid.Column="0"
                        Width="180" Height="180"
                        Cursor="Cross"
                        MouseDown="Wheel_MouseDown"
                        MouseMove="Wheel_MouseMove"
                        MouseUp="Wheel_MouseUp">
                    <!-- Wheel image drawn in code -->
                    <Image x:Name="WheelImage" Width="180" Height="180"/>
                    <!-- Crosshair cursor dot -->
                    <Ellipse x:Name="WheelCursor"
                             Width="14" Height="14"
                             Stroke="White" StrokeThickness="2.5"
                             Fill="Transparent"
                             Canvas.Left="83" Canvas.Top="83"
                             IsHitTestVisible="False">
                        <Ellipse.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="4" ShadowDepth="1" Opacity="0.8"/>
                        </Ellipse.Effect>
                    </Ellipse>
                </Canvas>

                <!-- Brightness slider (vertical) -->
                <Canvas x:Name="BrightnessCanvas" Grid.Column="2"
                        Width="22" Height="180"
                        Cursor="Hand"
                        MouseDown="Brightness_MouseDown"
                        MouseMove="Brightness_MouseMove"
                        MouseUp="Brightness_MouseUp">
                    <Rectangle x:Name="BrightnessBar" Width="22" Height="180" RadiusX="6" RadiusY="6"/>
                    <!-- Slider handle -->
                    <Rectangle x:Name="BrightnessHandle"
                               Width="22" Height="5"
                               Fill="White" RadiusX="3" RadiusY="3"
                               Canvas.Left="0" Canvas.Top="0"
                               IsHitTestVisible="False">
                        <Rectangle.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="3" ShadowDepth="1" Opacity="0.7"/>
                        </Rectangle.Effect>
                    </Rectangle>
                </Canvas>

                <!-- Right panel: preview + inputs + presets -->
                <StackPanel Grid.Column="4">

                    <!-- Preview swatch -->
                    <Border x:Name="PreviewSwatch"
                            Height="48" CornerRadius="10"
                            Margin="0,0,0,12">
                        <Border.Effect>
                            <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.4"/>
                        </Border.Effect>
                    </Border>

                    <!-- Hex input -->
                    <TextBlock Text="Hex" FontSize="11" Foreground="#666" Margin="0,0,0,4"/>
                    <DockPanel Margin="0,0,0,10">
                        <TextBlock Text="#" Foreground="#888" FontSize="13"
                                   VerticalAlignment="Center" Margin="0,0,4,0"/>
                        <TextBox x:Name="HexBox"
                                 Style="{StaticResource ModernTextBox}"
                                 MaxLength="6" FontSize="13"
                                 TextChanged="HexBox_TextChanged"/>
                    </DockPanel>

                    <!-- RGB readouts -->
                    <Grid Margin="0,0,0,12">
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="14"/>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="28"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="22"/><RowDefinition Height="22"/><RowDefinition Height="22"/>
                        </Grid.RowDefinitions>
                        <TextBlock Grid.Row="0" Grid.Column="0" Text="R" Foreground="#FF6B6B" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        <Slider x:Name="SliderR" Grid.Row="0" Grid.Column="1" Minimum="0" Maximum="255" Margin="4,0" VerticalAlignment="Center" ValueChanged="RGB_Changed"/>
                        <TextBlock x:Name="LabelR" Grid.Row="0" Grid.Column="2" Foreground="#888" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="1" Grid.Column="0" Text="G" Foreground="#5BFF8C" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        <Slider x:Name="SliderG" Grid.Row="1" Grid.Column="1" Minimum="0" Maximum="255" Margin="4,0" VerticalAlignment="Center" ValueChanged="RGB_Changed"/>
                        <TextBlock x:Name="LabelG" Grid.Row="1" Grid.Column="2" Foreground="#888" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>

                        <TextBlock Grid.Row="2" Grid.Column="0" Text="B" Foreground="#5B8CFF" FontWeight="Bold" FontSize="11" VerticalAlignment="Center"/>
                        <Slider x:Name="SliderB" Grid.Row="2" Grid.Column="1" Minimum="0" Maximum="255" Margin="4,0" VerticalAlignment="Center" ValueChanged="RGB_Changed"/>
                        <TextBlock x:Name="LabelB" Grid.Row="2" Grid.Column="2" Foreground="#888" FontSize="11" VerticalAlignment="Center" HorizontalAlignment="Right"/>
                    </Grid>

                    <!-- Preset swatches (compact) -->
                    <TextBlock Text="Presets" FontSize="11" Foreground="#666" Margin="0,0,0,6"/>
                    <WrapPanel x:Name="PresetPanel"/>
                </StackPanel>
            </Grid>
        </StackPanel>

        <!-- App list -->
        <StackPanel Grid.Row="3">
            <DockPanel Margin="0,0,0,8">
                <TextBlock Text="Apps" FontSize="12" Foreground="#888" VerticalAlignment="Center"/>
                <Button Content="+ Add App" Style="{StaticResource ModernButton}"
                        DockPanel.Dock="Right" Padding="10,4" Click="AddApp_Click"/>
                <Button Content="ðŸ“ Add Folder" Style="{StaticResource ModernButton}"
                        DockPanel.Dock="Right" Padding="10,4" Margin="0,0,8,0"
                        Background="#44475A" Click="AddFolder_Click"/>
            </DockPanel>
            <ScrollViewer MaxHeight="200" VerticalScrollBarVisibility="Auto">
                <StackPanel x:Name="AppListPanel"/>
            </ScrollViewer>
        </StackPanel>

        <!-- Footer -->
        <StackPanel Grid.Row="4" Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,14,0,0">
            <Button Content="Cancel" Style="{StaticResource ModernButton}"
                    Background="#44475A" Margin="0,0,10,0" Click="Cancel_Click"/>
            <Button Content="Save" Style="{StaticResource ModernButton}" Click="Save_Click"/>
        </StackPanel>
    </Grid>
</Window>
